<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <IsPackable>false</IsPackable>
    </PropertyGroup>

    <PropertyGroup>
        <!-- Baseline version to make it compile -->
        <SSNetVersion Condition=" '$(SSNetVersion)' == '' ">6.0.0</SSNetVersion>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="BenchmarkDotNet" Version="0.15.4" />
    </ItemGroup>

    <ItemGroup Condition=" '$(Configuration)' == 'LocalBuild' ">
      <ProjectReference Include="..\..\src\F23.StringSimilarity\F23.StringSimilarity.csproj" />
    </ItemGroup>

    <ItemGroup Condition=" '$(Configuration)' != 'LocalBuild' ">
      <PackageReference Include="F23.StringSimilarity" Version="$(SSNetVersion)" />
    </ItemGroup>

</Project>
